<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".coach.fragments.HealthcareFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleText"
            style="@style/TitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_videos"
            android:layout_marginStart="17dp"
            android:layout_marginTop="16dp" />
        <TextView
            android:id="@+id/healthcareTextView"
            style="@style/SubtitleText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gym"
            android:layout_marginStart="17dp"
            android:layout_marginTop="16dp" />

        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/healthcareImageSlider"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_margin="16dp"
            app:iss_auto_cycle="false"
            app:iss_period="1000"
            app:iss_delay="1000"
            app:iss_text_align="CENTER"
            app:iss_corner_radius="50"/>


        <TextView
            android:id="@+id/mentalHealthTextView"
            style="@style/SubtitleText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/healthy_food_tips"
            android:layout_marginStart="17dp"
            android:layout_marginTop="16dp"/>

        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/mentalHealthImageSlider"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_margin="16dp"
            app:iss_auto_cycle="false"
            app:iss_period="1000"
            app:iss_delay="1000"
            app:iss_text_align="CENTER"
            app:iss_corner_radius="50"/>

        <TextView
            android:id="@+id/healthyFoodTextView"
            style="@style/SubtitleText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/proper_nutrition"
            android:layout_marginStart="17dp"
            android:layout_marginTop="16dp"/>

        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/healthyFoodImageSlider"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="60dp"
            app:iss_auto_cycle="false"
            app:iss_period="1000"
            app:iss_delay="1000"
            app:iss_text_align="CENTER"
            app:iss_corner_radius="50"/>


        <!-- Add other UI elements as needed -->

    </LinearLayout>

</androidx.core.widget.NestedScrollView>