<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/list_selector"
    android:padding="5dip">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/payaments"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp" />

    <TextView
        style="@style/CardViewSubtitleText2"
        android:textColor="@color/black"
        android:id="@+id/operationDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data"
        android:layout_toRightOf="@id/image"/>

    <TextView
        style="@style/RegularText"
        android:id="@+id/description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/operationDate"
        android:layout_toRightOf="@id/image"
        android:layout_marginTop="1dip"
        android:text="Descrizione" />

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dividerInsetEnd="16dp"
        app:dividerInsetStart="56dp"
        android:layout_marginTop="16dp"
        android:layout_below="@id/description"/>

    <TextView
        style="@style/CardViewTitleText2"
        android:textColor="@color/black"
        android:id="@+id/money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_centerVertical="true"
        android:contentDescription="money"
        android:text="Money" />

</RelativeLayout>